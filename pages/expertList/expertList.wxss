.el-wrap{
  width:100%;
  height:auto;
  padding-bottom:30rpx;
  overflow:hidden;
  position:relative;
  background: #eaf8f8;
  box-sizing: border-box;
  }
.el-item{
  width:auto;
  height:312rpx;
  padding: 0 30rpx;
  overflow: hidden;
  position: relative;
  padding-top: 37rpx;
}
/* item   上 */
.el-item .item-t{
  width:100%;
  height:240rpx;
  /* background: linear-gradient(to right, #1fbd6b,#7bd8a9); */
  border-radius: 20rpx;
  box-shadow: 0 6rpx 1rxp 13rpx  rgba(23,106,180,0.2);
  z-index: 992;
  position: relative;
}
.el-item:nth-child(1n) .item-t{
    background: linear-gradient(to right, rgb(34,177,214) , rgb(63,225,174));
  }
   .el-item:nth-child(2n) .item-t{
    background: linear-gradient(to right, rgb(214,120,234) , rgb(94,122,234));
  }
   .el-item:nth-child(3n) .item-t{
    background: linear-gradient(to right, rgb(241,169,120) , rgb(255,92,157));
  }
   .el-item:nth-child(4n) .item-t{
    background: linear-gradient(to right, rgb(65,161,247) , rgb(100,210,241));
  }
  
/* item   上 左 */
.el-item .item-t .item-t-l{
  float: left;
  display: inline-block;
  width:70%;
  height:100%;
}
.item-t-l .nick-wrap{
  width: 100%;
  height:90rpx;
  line-height: 90rpx;
  margin-top: 15rpx;
}
.item-t-l .nick-wrap image{
  width: 90rpx;
  height:90rpx;
  border-radius:50%;
  /* background: linear-gradient(to bottom, rgb(139,200,255) , rgb(98,208,242)); */
  margin: 0 18rpx 0 30rpx;
  overflow: hidden;
  float: left;
}
.item-t-l .nick-wrap .name{
  width: auto;
  height:90rpx;
  float: left;
  font-size: 32rpx;
  color:#fff;
}
