.el-introduce{background: #07c160;width:100%;height:200rpx;box-sizing: border-box;padding-top:15rpx;}
.expert-pic{
  width:140rpx;
  height:140rpx;
  border-radius: 50%;
  border:1px solid #fff;
  overflow: hidden;
  box-sizing: border-box;
  float: left;
  margin-left: 30rpx;
  }
  .expert-pic image{
    width:100%;
    height:100%;  
  }
  .expert-txt{
    float: left;
    width:50%;
    padding: 10rpx 25rpx;
  }
  .expert-txt .expertName{display: block;color: #fff;font-size: 40rpx;}
  .expert-txt .introduce{display: block;color: #fff;font-size: 30rpx;margin-top: 10rpx;overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;}
  .vip-btn{
