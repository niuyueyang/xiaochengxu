.cl-item-r div {
  width: 100%;
  font-size: 20px;
  border-radius: 0 5px 5px 0;
  height: 60rpx;
  line-height: 60rpx;
}

.cl-item-r .courseName {
  font-size: 16px;
  color: #333333;
  white-space:nowrap;
 overflow:hidden;
 text-overflow:ellipsis;
}

.cl-item-r .courseTxt {
  height:80rpx;
  font-size: 14px;
  color: #c2c2c2;
  margin-top: 18rpx;
   overflow:hidden;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
}

.cl-item-r .publicTime {
  font-size: 14px;
  color: #c2c2c2;
  margin-top: 18rpx;
}
