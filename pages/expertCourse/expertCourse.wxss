    border-radius: 10rpx;
  }
 .vip-btn .vip-icon{
   width:80rpx;height:80rpx;
   display: block;
   margin: 0 auto;

 }
  .vip-btn .vip-txt{
      
      font-size: 28rpx;
      text-align: center;
      color: #fff;
 }
/* 弧度背景 */
.cl-bg{width:100%;height:130rpx;position: absolute;top: 190rpx;}

/* 列表 */
.cl-title {
  height:100rpx;
  line-height: 100rpx;
  font-size: 16px;
  color: #282828;
  background: #fff;
  padding: 0 0.18rem;
  background: linear-gradient(top, #9cd684 0%, #a8de92 100%);
}

.cl-wrap {
  /* background: #f2f2f2; */
  padding: 25rpx;
  position: absolute;top: 200rpx;
   width: 100%;
  height: auto;
  box-sizing: border-box;
  
}

.cl-item {
  width: 100%;
  height: 240rpx;
  background: #fff;
  display: flex;
  margin-bottom: 30rpx;
  border-radius: 5px;
  box-shadow: 1rpx 1rpx 5px #73dba5;
  position: relative;

}

.cl-item-l {
  width: 35%;
  overflow: hidden;
  height: 100%;
}

.cl-item-l image {
  width: 100%;
  height: 100%;
  border-radius: 5px 0 0 5px;
}

.cl-item-r {
  width: 57%;
  height: auto;
  overflow: hidden;
  padding: 18rpx;
  float: left;
}
