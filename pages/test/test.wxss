.cd-container{
  width: 100%;
  height: auto;
  overflow: hidden;
  background-color: #edebec;
}
.page-body-button {
  margin-bottom: 30rpx;
}
.cd-wrap{
  width: 100%;
  height: 400rpx;
  overflow: hidden;
  position: relative;
}
live-player {
  width: 100%;
  height: 400rpx;
  position: relative;
  z-index: -1;
}
.cd-play,.cd-pause{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 10rpx;
  top:0;
}
.cd-playBg{
  width: 100%;
  height: 60rpx;
  background-color: #efefef;
  position: relative;
}
.cd-liveWrap{
  width:100%;
  height: auto;
  overflow: hidden;
  padding-top: 50rpx;
  box-sizing: border-box;
  padding-bottom: 50rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background-color: #fff;
  margin-bottom: 15rpx;
}
.cd-liveTxt{
  font-size: 15px;
  color: #353535;
}
.cd-liveTime{
  font-size: 14px;
  color: #a9a9a9;
  margin-top: 15rpx;
}
.cd-liveView{
  width: 100%;
  height: 70rpx;
  clear:both;
  overflow: hidden;
  box-sizing: border-box;
}
.cd-liveItem{
  width: 50%;
  height: 70px;
  line-height: 70rpx;
  text-align: center;
  float: left;
}
.cd-liveView:nth-child(2n){
  background-color: #efefef;
}
.cd-liveView:nth-child(2n+1){
  background-color: #fff;
}
.cd-liveTab{
  width: 100%;
  height: auto;
  overflow: hidden;
  box-sizing: border-box;
}
.cd-tabHeader{
  width: 100%;
  height: 90rpx;
  box-sizing: border-box;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  border-bottom:1px solid #efefef;
}
.cd-tabItem{
  width: 50%;
  box-sizing: border-box;
  height: 60rpx;
  line-height: 60rpx;
  float: left;
  overflow: hidden;
  text-align: center;
  font-size: 15px;
  border-right: 1px solid #efefef;
}
.cd-tabHover{
  color: #7CCD7C;
}
.cd-tabLine{
  width: 50%;
  height: 3px;
  background-color: #7CCD7C;
  margin-top: -1px;
  transition: all .3s linear;
}
.cd-tabContent{
  padding-top: 20rpx;
  width: 200%;
  height: auto;
  overflow: hidden;
  transition: all 0.3s linear;
}
.cd-tabExpirse{
  width: 50%;
  height: auto;
  overflow: hidden;
  float: left;
}
.cd-tabCourse{
  width: 50%;
  height: auto;
  overflow: hidden;
  float: left;
  padding-left: 10px;
  padding-right: 10px;
  box-sizing: border-box;
}
.cd-tabExpertItem{
    width: 100%;
    height: auto;
    overflow: hidden;
    margin-bottom: 40rpx;
    padding-left: 10px;
    padding-right: 10px;
    box-sizing: border-box;
    clear: both;
    border-bottom: 1px solid #efefef;
    padding-bottom: 20rpx;
  }
  .cd-tabExpertItem:last-child{
    border-bottom: none;
    margin-bottom: 0;
  }
  .cd-tabExpressImg{
    width: 40%;
    height: auto;
    overflow: hidden;
    float: left;
  }
  .cd-tabExpressImg image{
    width: 220rpx;
    height: 220rpx;
    border-radius: 50%;
  }
  .cd-tabExpressTxt{
    font-size: 16px;
    color: #999999;
    line-height: 30px;
  }
  .cd-tabExpressName{
    font-size: 20px;
    color: #3d3d3d;
  }
  .cd-tabCourse{
    font-size: 16px;
    color: #999999;
    line-height: 30px;
  }


  .commodity_screen {
 width: 100%;
 height: 100%;
 position: fixed;
 top: 0;
 left: 0;
 background: #000;
 opacity: 0.2;
 overflow: hidden;
 z-index: 1000;
 color: #fff;
}
 
.commodity_attr_box {
 width: 100%;
 overflow: hidden;
 position: fixed;
 bottom: 0;
 left: 0;
 z-index: 2000;
 background: #fff;
 padding-top: 20rpx;
}