/* banner */
.banner {
	height: 270rpx;
}
.banner image {
	width: 100%;
	height: 100%;
}
/* 当前直播 */
 .curLive{
   width:100%;
   height:420rpx;
    /* background: linear-gradient(to bottom right, #f3f3f3 , #d0d0d0); */
    /* background: #e4edf8; */
    background: #fff;
    padding-top:20rpx;

 }
 .curLive .title{
   height:80rpx;
   line-height: 80rpx;
   color: #101010;
   font-size: 32rpx; 
   padding-left: 20rpx;
   float: left;
 }
  .curLive .curIcon{width:45rpx;height:45rpx;margin-top: 20rpx;margin-left: 10rpx;display: block;float: left}
  .curLive .curWrap{width: 100%;height:300rpx;box-sizing: border-box;clear: both;}

 .curLive swiper{
  height: 100%;
}
 .curLive .content{
  font-size: 16px;
  color: #333;
}
 .curLive swiper-item{							
  width: 100%;		
  box-sizing: border-box;
  background: #f2f2f2;
  border-radius:10rpx;
  padding-right:20rpx;

}
 .curLive swiper-item image{
  width: 100%;
  height: 240rpx;
  display: block;
}
 .curLive swiper-item view{
  width: 100%;
  height: 60px;
  line-height: 60rpx;
  font-size: 26rpx;
  text-align: left
}
 .curLive swiper-item .box{							
  width: 100%;
  height:100px;
  margin-top: 40px;
  box-sizing: border-box;
  box-shadow: 0 0 4px 4px #f2f2f2;  
}
/* 历史回放 */
 .historyLive{
   width:100%;
   height:auto;
   background:#f2f2f2;
    padding-bottom:50rpx;
    overflow:hidden;
    position:relative;
    padding-top:20rpx;

 }
 .historyLive .title{
   height:80rpx;
   line-height: 80rpx;
   color: #101010;
   font-size: 32rpx; 
   padding-left: 18rpx;
   float: left;
 }
  .historyLive .hisIcon{width:45rpx;height:45rpx;margin-top: 18rpx;margin-left: 10rpx;display: block;float: left;}
 .historyLive .hisWrap{
   width:auto;
   height:auto;
  padding:0 18rpx;

 }
 .hisWrap .hisItem{
   width:100%;
   height:240rpx;
   background: #fff;
    margin-bottom: 20rpx;
   clear: both;
   border-radius: 8rpx;
 }
 .hisWrap .hisItem image{
   float:left;
  width:240rpx;
  height:220rpx;
  border-radius:8rpx;
  position:relative;
  overflow:hidden;
  padding:10rpx;
   }
 .hisWrap .hisItem .wrap-r{
   width:auto;
  height:100%;
  float:left;
}
 .hisItem .wrap-r text{height:60rpx;line-height: 60rpx;display: block;padding-left: 18rpx;}
 .hisItem .wrap-r text:nth-child(1){font-size: 32rpx;color: #222222; }
 .hisItem .wrap-r text:nth-child(2){font-size: 28rpx;color: #323232; }
 .hisItem .wrap-r text:nth-child(3){font-size: 28rpx;color: #cecece; }
 .home-desc{
   width: 450rpx;
   height: 100rpx;
   overflow: hidden;
   float: left;
   font-size: 26rpx;
   color: #cecece;
   box-sizing: border-box;
   padding-left: 20rpx;
   padding-right: 20rpx;
   display: block;
    display: -webkit-box;
    max-width: 400px;
    margin: 0 auto;
    line-height: 1.4;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
 }
 .home-time{
   clear:both;
 }