}
.cd-playBg{
  width: 100%;
  height: 60rpx;
  position: relative;
  top:340rpx;
  left: 0;
  overflow: hidden;
}
.cd-modalBg{
  position: relative;
  z-index: 999;
}
.cd-liveWrap{
  width:100%;
  height: auto;
  overflow: hidden;
  /* padding-top: 50rpx; */
  box-sizing: border-box;
  /* padding-bottom: 50rpx; */
  padding-left: 20rpx;
  padding-right: 20rpx;
  background-color: #fff;
  margin-bottom: 15rpx;
  position: relative;
  padding-top: 20rpx;
  padding-bottom:20rpx;
}
.cd-arrowWrap{
  position: absolute;
  right:20rpx;
  top: 30rpx;
  transform: rotate(-90deg);
  width: 60rpx;
  height: 60rpx;
  text-align: center;
}
.cd-arrowDown{
  width: 40rpx;
  height: 20rpx;
  display: inline-block;
  z-index: 999;
  /* animation:mymove 2s infinite; */
/* -webkit-animation:mymove 2s infinite; */
}
@keyframes mymove {
    0% {
        transform: translate(0px, 0px);
    }
    50% {
        transform: translate(0px, -5px);
    }
    100% {
        transform: translate(0px, 0px);
    }
}
.cd-liveTxt{
  font-size: 15px;
  color: #353535;
  padding-top: 10rpx;
  box-sizing: border-box;
  width: 50%;
  height: auto;
  overflow: hidden;
  float: left;
  padding-bottom: 20rpx;
}
.cd-liveTime{
  font-size: 15px;
  color: #a9a9a9;
  padding-top: 10rpx;
  box-sizing: border-box;
  height: auto;
  overflow: hidden;
  padding-bottom: 20rpx;
  width: 50%;
  float: left;
  text-align: center;
}
.cd-liveTxtR{
  font-size: 15px;
  color: #353535;
  box-sizing: border-box;
  height: auto;
  overflow: hidden;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.cd-liveTimeR{
  font-size: 14px;
  color: #a9a9a9;
  padding-top: 10rpx;
  box-sizing: border-box;
  height: auto;
  overflow: hidden;
  padding-bottom: 0rpx;
  border:1rpx solid #efefef;
}
.cd-liveView{
  width: 100%;
  height: 90rpx;
  clear:both;
  overflow: hidden;
  box-sizing: border-box;
}
.cd-liveItem{
  width: 50%;
  height: 70px;
  line-height: 70rpx;
  text-align: center;
  float: left;
}
.cd-liveView:nth-child(2n){
  background-color: #efefef;
}
.cd-liveView:nth-child(2n+1){
  background-color: #fff;
}
.cd-liveTab{
  width: 100%;
  height: auto;
  overflow: hidden;
  box-sizing: border-box;
}
.cd-tabHeader{
  width: 100%;
  height: 90rpx;
  box-sizing: border-box;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  border-bottom:1px solid #efefef;
}
.cd-tabItem{
  width: 50%;
  box-sizing: border-box;
  height: 60rpx;
  line-height: 60rpx;
  float: left;
  overflow: hidden;
  text-align: center;
  font-size: 15px;
  border-right: 1px solid #efefef;
}
.cd-tabHover{
  color: #7CCD7C;
}
.cd-tabLine{
  width: 50%;
  height: 3px;
  background-color: #7CCD7C;
  margin-top: -1px;
  transition: all .3s linear;
}
.cd-tabContent{
  padding-top: 20rpx;
  width: 200%;
  height: auto;
  overflow: hidden;
  transition: all 0.3s linear;
}
.cd-tabExpirse{
  width: 50%;
  height: auto;
  overflow: hidden;
  float: left;
}
.cd-tabCourse{
  width: 50%;
  height: auto;
  overflow: hidden;
  float: left;
  padding-left: 10px;
  padding-right: 10px;
  box-sizing: border-box;
}
.cd-tabCourse .courseName{
  width:100%;
  height:100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #efefef;
  padding-left: 18rpx;

  }
  .cd-tabCourse .courseDesc{
  width:auto;
  height:auto;
  padding: 25rpx 18rpx;
  box-sizing: border-box;
  }

.cd-tabExpertItem{
    width: 100%;
    height: auto;
    overflow: hidden;
    margin-bottom: 40rpx;
    padding-left: 10px;
    padding-right: 10px;
    box-sizing: border-box;
    clear: both;
    border-bottom: 1px solid #efefef;
    padding-bottom: 20rpx;
  }
  .cd-tabExpertItem:last-child{
    border-bottom: none;
    margin-bottom: 0;
  }
  .cd-tabExpressImg{
    width: 40%;
    height: auto;
    overflow: hidden;
    float: left;
    position: relative;
    z-index: 999;
  }
  .cd-tabExpressImg image{
    width: 220rpx;
    height: 220rpx;
    border-radius: 50%;
  }
  .cd-tabExpressTxt{
    font-size: 16px;
    color: #999999;
    line-height: 30px;
  }
  .cd-tabExpressName{
    font-size: 20px;
    color: #3d3d3d;
  }
  .cd-tabCourse{
    font-size: 16px;
    color: #999999;
    line-height: 30px;
  }


