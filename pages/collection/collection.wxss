page{
  background-color:#f5f5f5;
  }
.ct-tab{
  width:100%;
  height:85rpx;
  line-height:85rpx;
  display:flex;
  flex-direction:row;
  background:#fff;
  }

.border-right{
  border-right:1px solid #07c160;
  }
.default{
  text-align:center;
  flex:1;
  color:#676a6d;
  font-weight:bold;
  font-size:30rpx;
  }
.active{
  text-align:center;
  color:#07c160;
  flex:1;
  font-weight:bold;
  font-size:30rpx;
  }
.show{
  display:block;
  height:auto;
  margin-top: 20rpx;
  }
.hidden{
  display:none;
  height:auto;
  }

/* 左item */
.course-item {
  width: 100%;
  height: 240rpx;
  background: #fff;
  display: flex;
  margin-bottom: 20rpx;
  border-radius: 5px;
  position: relative;
}

.ct-item-l {
  width: 35%;
  overflow: hidden;
  height: 100%;
}
.ct-item-l image {
  width: 100%;
  height: 100%;
  border-radius: 5px 0 0 5px;
}
.ct-item-r {
  width: 57%;
  height: auto;
  overflow: hidden;
  padding: 18rpx;
  padding-top: 40rpx;
  float: left;
}
.ct-item-r div {
  width: 100%;
  font-size: 20px;
  border-radius: 0 5px 5px 0;
  height: 60rpx;
  line-height: 60rpx;
}
.ct-item-r .courseName {
  font-size: 16px;
  color: #333333;
}
.ct-item-r .teacherName {
  font-size: 14px;
  color: #c2c2c2;
  margin-top: 18rpx;
}
.ct-item-r .publicTime {
  font-size: 14px;
  color: #c2c2c2;
  margin-top: 18rpx;
}
